<form action="/update/<%= @story.id %>/update" method="post">
	
	<div>
		Author: <input type="text" name="title" value="<%= @story.title %>"/>
	</div>

	<div>
		URL: <input type="text" name="url" value="<%= @story %>"/>
	</div>

	<div>
		Body: <textarea name="body" cols=60 rows=10><%= @story.body %></textarea>
	</div>

	<button type="submit">Edit Story</button>
	
</form>