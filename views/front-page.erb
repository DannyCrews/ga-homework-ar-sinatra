<div class="post-container">
<% @posts.each do |post| %>
	<a href="/<%= post["id"] %>"><h2><%= post["title"] %></h2></a> 

	<%= post["created_at"] %>
	<div class="post-body">
		<%= post["body"] %>
	</div>

	<a href="/<%= post["id"] %>/edit">Edit Post</a>
	<form action="/<%= post["id"] %>/delete" method="post">
		<input type="submit" name="delete post" value="delete" />
	</form>
<% end %>
</div>

<a href='/new'>New Blog Post</a>